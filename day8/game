	<div>
		<p class="timer">
			score: <span id="score"></span>
		</p>
	</div>
    <div>
      <div class="grid-container" id="container">
        <div class="grid-item" id="1" onclick="clicked(cid)">1</div>
        <div class="grid-item" id="2" onclick="clicked(cid)">2</div>
        <div class="grid-item" id="3" onclick="clicked(cid)">3</div>
        <div class="grid-item" id="4" onclick="clicked(cid)">4</div>
        <div class="grid-item" id="5" onclick="clicked(cid)">5</div>
        <div class="grid-item" id="6" onclick="clicked(cid)">6</div>
        <div class="grid-item" id="7" onclick="clicked(cid)">7</div>
        <div class="grid-item" id="8" onclick="clicked(cid)">8</div>
        <div class="grid-item" id="9" onclick="clicked(cid)">9</div>
      </div>
    </div>
    <div class="timer" id="timer">
      Timer
    </div>
    <div class="buttons">
      <button onclick="startTimer()">Start Timer</button>
      <button id="start" onclick="startGame()">Start Chasing</button>
      <button id="stop" onclick="stop_chase()">Stop Chase</button>
      <button onclick="stop_timer()">Stop Timer</button>
      <button onclick="reset_counter()">Reset Timer</button>
    </div>
  </body>
  <script>
    let count = 0;
    let pause;
	let process;
	let id = 0
	function stop_chase(){
		document.getElementById("start").disabled=false;
		clearInterval(process);
	}
    function reset_counter() {
      count=0;
      pause=undefined;
	  var a = document.getElementById("timer");
      a.innerText = 0;
    }
    function change_color(idd) {
      var a = document.getElementById(idd);
      a.innerText="red";
      a.style.backgroundColor="red";
    }
    function startTimer(){
      if(pause == undefined){
      pause = setInterval(increment,1000);
      }
    }
    function stop_timer() {
      clearInterval(pause);
      pause = undefined;
    }
   
    function increment() {
      count=count+1;
      var a = document.getElementById("timer");
      a.innerText = count;
    }
	function begin(){
		id = Math.ceil(Math.random() * 9);
		var change = document.getElementById(id);
		change.style.backgroundColor="red";
		moleouttime= setInterval(refresh,0.5*1000);
	}
	function refresh(){
		change.style.backgroundColor=rgba(255, 255, 255, 0.8);
		clearInterval(moleouttime);
	}
    function startGame() {
      process = setInterval(begin,1000);
	  document.getElementById("start").disabled=true;
	  current_score = 0;
	  document.getElementById("score").innerText = current_score;
	  
    }
	function clicked(cid){
		if(id==cid){
			current_score++;
			document.getElementById("score").innerText=current_score;
		}
	}
	
  </script>
